<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josh.project2.loginDisplay">

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:text="The username is"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/loginTextView"
        android:layout_below="@+id/loginTextView"
        android:layout_marginTop="21dp"
        android:text="The password is"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/homebttn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/passwordTextView"
        android:layout_below="@+id/passwordTextView"
        android:layout_marginTop="30dp"
        android:onClick="returnHome3"
        android:text="HOME"
        android:textColor="#ff0000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/passed_UNmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/loginTextView"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/loginTextView"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/passed_PWmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/passwordTextView"
        android:layout_alignBottom="@+id/passwordTextView"
        android:layout_alignStart="@+id/passed_UNmsg"
        android:layout_marginStart="1dp"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>

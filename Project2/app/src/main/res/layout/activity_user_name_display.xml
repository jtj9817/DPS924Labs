<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josh.project2.userNameDisplay">

    <TextView
        android:id="@+id/unameHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:text="@string/text_header"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/un_passedMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/unameHint"
        android:layout_alignBottom="@+id/unameHint"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/unameHint"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/homeBttn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/unameHint"
        android:layout_below="@+id/unameHint"
        android:layout_marginTop="33dp"
        android:onClick="returnHome1"
        android:text="HOME"
        android:textColor="#ff0000"
        android:textStyle="bold" />

</RelativeLayout>

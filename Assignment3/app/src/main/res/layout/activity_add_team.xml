<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#00ccff">

<RelativeLayout
    android:id="@+id/rLayout1"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#ff3399">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="ENTER TEAM DETAILS"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="14dp"
        android:text="CITY:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="13dp"
        android:text="NAME:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="17dp"
        android:text="SPORT:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="21dp"
        android:text="MVP:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="24dp"
        android:text="STADIUM:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/eTxtCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/eTxtTeamName"
        android:ems="10"
        android:hint="City Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/eTxtTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eTxtSportCategory"
        android:layout_alignTop="@+id/textView7"
        android:ems="10"
        android:hint="Team Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/eTxtSportCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eTxtMVP"
        android:layout_alignTop="@+id/textView8"
        android:ems="10"
        android:hint="Sport Category"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/eTxtMVP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eTxtStadium"
        android:layout_alignTop="@+id/textView9"
        android:ems="10"
        android:hint="Team MVP"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/eTxtStadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:ems="10"
        android:hint="Game Stadium"
        android:inputType="textPersonName" />
</RelativeLayout>

    <Button
        android:id="@+id/submitBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rLayout1"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:text="SUBMIT"
        android:textSize="24sp" />

    <Button
        android:id="@+id/exitBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/submitBttn"
        android:layout_alignBottom="@+id/submitBttn"
        android:layout_centerHorizontal="true"
        android:text="EXIT"
        android:textSize="24sp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0066ff"
    tools:context="com.example.josh.assignment3.TeamDetails">

    <RelativeLayout
        android:id="@+id/rLayout1"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffff66">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="EDIT TEAM DETAILS"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="14dp"
            android:text="CITY:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="13dp"
            android:text="NAME:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="17dp"
            android:text="SPORT:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="21dp"
            android:text="MVP:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="24dp"
            android:text="STADIUM:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/eTxtCity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignStart="@+id/eTxtTeamName2"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/eTxtTeamName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/eTxtSportCategory2"
            android:layout_alignTop="@+id/textView7"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/eTxtSportCategory2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/eTxtMVP2"
            android:layout_alignTop="@+id/textView8"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/eTxtMVP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/eTxtStadium2"
            android:layout_alignTop="@+id/textView9"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/eTxtStadium2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView10"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textView10"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/submitBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rLayout1"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:text="SUBMIT"
        android:textSize="24sp" />

    <Button
        android:id="@+id/exitBttn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/submitBttn"
        android:layout_alignBottom="@+id/submitBttn"
        android:layout_centerHorizontal="true"
        android:text="EXIT"
        android:textSize="24sp" />
</RelativeLayout>
